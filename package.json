            },
            "cordova-plugin-geolocation": {
                "GEOLOCATION_USAGE_DESCRIPTION": "Brewskey uses your location to find nearby taps."
            },
            "cordova-sms-plugin": {},
            "phonegap-plugin-push": {
                "SENDER_ID": "394986866677"
            },
            "cordova-plugin-code-push": {},
            "cordova-plugin-inappbrowser": {}
        }
    }
